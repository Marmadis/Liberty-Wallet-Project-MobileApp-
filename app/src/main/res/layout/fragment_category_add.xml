<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <ImageButton
        android:id="@+id/back_btn_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_btn_image"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/adding_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/inter_medium"
        android:text="Adding a category"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <EditText
        android:id="@+id/name_category_edit"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/inter_light"
        android:background="@drawable/rounded_box"
        android:padding="12dp"
        android:hint="Category name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adding_category_title" />

    <TextView
        android:id="@+id/name_category_Error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/inter_medium"
        android:textSize="13dp"
        android:visibility="gone"
        android:text="Error"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="@+id/name_category_edit"
        app:layout_constraintTop_toBottomOf="@+id/name_category_edit" />

    <Spinner
        android:id="@+id/category_type_spinner"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_box"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintStart_toStartOf="@+id/name_category_edit"
        app:layout_constraintTop_toBottomOf="@+id/name_category_edit" />


    <Button
        android:id="@+id/save_category_button"
        android:layout_width="242dp"
        android:layout_height="65dp"
        android:layout_marginTop="45dp"
        android:backgroundTint="@color/cornflowerBlue"
        android:text="Save"
        android:fontFamily="@font/inter_medium"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/category_type_spinner"
        app:layout_constraintTop_toBottomOf="@+id/category_type_spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>