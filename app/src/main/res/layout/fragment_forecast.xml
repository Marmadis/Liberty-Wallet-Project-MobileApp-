<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_marginTop="10dp"
    android:padding="6dp">

    <!-- Верхний ряд: крупные кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/btn_recommendations_forecasts"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:fontFamily="@font/inter_medium"
            android:layout_weight="1"
            android:text="Recommendations"
            android:backgroundTint="@color/tundora"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_spending_forecasts_menu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Spending forecasts"
            android:fontFamily="@font/inter_medium"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/cornflowerBlue"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>
